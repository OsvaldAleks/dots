{
	// GENERAL
    "layer": "top",
	"margin-left":0,
	"margin-right":0,
	"margin-top":0,
	"output": ["eDP-1"],
    "modules-left": ["group/left-pill", "group/player"], 
    "modules-center": ["clock#date", "clock#time"],
    "modules-right": ["tray","group/right-pill"],

	//LEFT SIDE

    "group/left-pill": {
        "orientation": "horizontal",
        "modules": [
            "custom/specialWorkspace",
            "hyprland/workspaces"
        ]
    },
    "custom/specialWorkspace": {
        "format": "ÔÑ† ",
        "tooltip": false,
        "on-click": "hyprctl dispatch togglespecialworkspace main"
    },
	"hyprland/workspaces": {
		"format": "{icon}",
		"format-icons": {
			"active": "Ó∑∏ ",
            "1":"Û∞üü",
            "2":"Û∞üü",
            "3":"Û∞üü",
			"default": "Û±îê"
		},
		"persistent-workspaces": {
			"*": 3
		},
		"on-scroll-up":"hyprctl dispatch workspace m-1",
		"on-scroll-down":"hyprctl dispatch workspace m+1"
    },
    "group/player": {
        "orientation": "horizontal",
        "modules": [
            "group/controls",
            "mpris"
        ]
    },
    "group/controls": {
        "orientation": "horizontal",
        "modules": [
            "mpris#controls-prev",
            "group/controls-play",
            "mpris#controls-next"
        ]
    },
    "group/controls-play": {
        "orientation": "horizontal",
        "modules": [
            "mpris#controls"
        ]
    },

    "mpris": {
        "format": "{title}",
    	"player-icons": {
	    	"default": "‚ñ∂",
	    	"mpv": "üéµ"
    	},
	    "max-length": 25,
	    "ellipsis":"...",
	    "on-click":"~/.config/waybar/scripts/toggleWidget.sh media",
	    "tooltip-format":"{player}: {title} - {artist} ({position}/{length})"
    },
    "mpris#controls": {
       "format": "{status_icon}",
       "status-icons": {
           "playing": "ÔÅå",
           "paused": "ÔÅã",
            "stopped": "ÔÅã"
       },
       "on-click": "playerctl play-pause",
       "tooltip": false
    },
     "mpris#controls-prev": {
       "format": "ÔÅä",
       "on-click": "playerctl previous",
       "tooltip": false
    },
    "mpris#controls-next": {
       "format": "ÔÅé",
       "on-click": "playerctl next",
       "tooltip": false
    },

    "tray": {
		"icon-size": 14,
		"spacing": 5
	},
	

    // CENTER
    "clock#date": {
        "format": "ÔÅ≥ {:%b %d}",
        "tooltip": false,
        "on-click": "~/.config/waybar/scripts/toggleWidget.sh calendar"
    },

    "clock#time": {
        "format": "ÔÄó {:%H:%M:%S}",
        "tooltip": false,
        "interval": 1
    },
	"custom/notifications":{
		"hide-empty-text": false,
		"exec":"~/.config/waybar/scripts/checkNotification.sh",
		"return-type": "json",
		"signal": 2,
		"on-click":"~/.config/waybar/scripts/toggleWidget.sh notifications"
	},

	//RIGHT
    "group/right-pill": {
        "orientation": "horizontal",
        "modules": [
            "group/network-group",
            "custom/wl-gammarelay-temperature",
            "backlight",
            "pulseaudio",
            "battery",
            "custom/menu"
        ],
		"signal": 15
    },

    "group/network-group": {
        "orientation": "horizontal",
        "modules": [
            "network",
            "custom/bluetooth"
        ]
    },

    "network": {
		"tooltip": true,
		"rotate": 0,
		"format-wifi": "{essid} Û∞ñ©",
		"format-ethernet": "Û±òñ",
		"tooltip-format": "Network: <b>{essid}</b>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>",
		"format-linked": "{essid} Û±òñ",
		"format-disconnected": "Û∞ñ™",
		"tooltip-format-disconnected": "Disconnected",
        "interval": 2,
        "on-click": "networkmanager_dmenu"
    },
    "custom/bluetooth":{
        "format":"Û∞ÇØ",
        "tooltip":false,
        "on-click": "DMENU_BLUETOOTH_LAUNCHER=fuzzel dmenu-bluetooth"
    },
	"custom/wl-gammarelay-temperature": { //required gammarelay-rs
        "format": "{text} {icon}",
		"format-icons": ["Ôãã","Ôãä","Ôãâ","Ôãà","Ôãá"],
		"return-type": "json",
        "exec": "~/.config/waybar/scripts/gammaRelayWrapper.sh --check",
		"signal": 15,
		"interval": "once",
		"tooltip": false,
		"reverse-scrolling": true,
        "on-scroll-up": "~/.config/waybar/scripts/gammaRelayWrapper.sh --down",
        "on-scroll-down": "~/.config/waybar/scripts/gammaRelayWrapper.sh --up",
        "on-click":"~/.config/waybar/scripts/toggleWidget.sh screenAndVolume"
    },

	"backlight":{
		"device":"eDP-1",
		"format":"{percent}% {icon}",
		"format-icons":["Û∞Éö", "Û∞Éõ", "Û∞Éú", "Û∞Éû", "Û∞Éü", "Û∞É†"],
		"reverse-scrolling": true,
		"scroll-step": 1,
		"tooltip":false,
		"signal": 14,
        "on-click":"~/.config/waybar/scripts/toggleWidget.sh screenAndVolume"
	},

    "pulseaudio": {
		"format": "{volume}% {icon}",
		"format-bluetooth": "{volume}% {icon}Ôäî",
		"format-muted": "Óª®",
		"format-icons": {
			"alsa_output.pci-0000_00_1f.3.analog-stereo": "Óå≠",
			"alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "Óª®Óå≠",
			"headphones": "ÔÄ•",
			"handsfree": "ÔÄ•",
			"headset": "ÔÄ•",
			"phone": "ÔÇï",
			"phone-muted": "Ó¥ó",
			"portable": "ÔÇï",
			"car": "ÔÜπ",
			"default": ["ÔÄ¶","ÔÄß","ÔÄß","ÔÄ®","ÔÄ®"]
		},
		"states":{
			"quiet":0
		},
		"scroll-step":1,
		"reverse-scrolling":true,
		"signal": 13,
        "on-click":"~/.config/waybar/scripts/toggleWidget.sh screenAndVolume"
    },

	"battery": {
		"format": "{capacity}% {icon}",
		"format-charging": "{capacity}% ÔÉß",
		"states": {
			"charged":100,
			"good":80,
			"regular":70,
			"warning": 30,
			"critical": 15
		},
		"format-warning": "{capacity}% Ôá¶",
		"format-critical": "{capacity}% Ôá¶",
		"format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "on-click":"~/.config/waybar/scripts/toggleWidget.sh screenAndVolume"
	},
	"custom/menu":{
		"format":"ÔÉâ",
		"tooltip":false,
		"on-click":"~/.config/waybar/scripts/toggleWidget.sh settings"
	}
}
