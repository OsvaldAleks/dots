{
  "logo": {
    "padding": {
      "top": 2,
      "left": 1,
      "right": 2
    },
    "color": {
      "1": "33",
      "2": "91"
    }
  },
  "display": {
    "separator": "  "
  },
  "modules": [
    // Title
    {
      "type": "title",
      "format": "{#37}╭───────────── {#91}{user-name}"
    },
    // System Information
    {
      "type": "custom",
      "format": "{#37}│ {#91}System Information"
    },
    {
      "type": "os",
      "key": "{#separator}{#37}│  {#keys}{#32}󰍹 OS"
    },
    {
      "type": "kernel",
      "key": "{#separator}{#37}│  {#keys}{#32}󰒋 Kernel"
    },
    {
      "type": "uptime",
      "key": "{#separator}{#37}│  {#keys}{#32}󰅐 Uptime"
    },
    {
      "type": "packages",
      "key": "{#separator}{#37}│  {#keys}{#32}󰏖 Packages",
      "format": "{all}"
    },
    {
      "type": "custom",
      "format": "{#37}│"
    },
    // Desktop Environment
    {
      "type": "custom",
      "format": "{#37}│ {#91}Desktop Environment"
    },
    {
      "type": "de",
      "key": "{#separator}{#37}│  {#keys}{#32}󰧨 DE"
    },
    {
      "type": "wm",
      "key": "{#separator}{#37}│  {#keys}{#32}󱂬 WM"
    },
    {
      "type": "wmtheme",
      "key": "{#separator}{#37}│  {#keys}{#32}󰉼 Theme"
    },
    {
      "type": "display",
      "key": "{#separator}{#37}│  {#keys}{#32}󰹑 Resolution"
    },
    {
      "type": "shell",
      "key": "{#separator}{#37}│  {#keys}{#32}󰞷 Shell"
    },
    {
      "type": "terminalfont",
      "key": "{#separator}{#37}│  {#keys}{#32}󰛖 Font"
    },
    {
      "type": "custom",
      "format": "{#37}│"
    },
    // Hardware Information
    {
      "type": "custom",
      "format": "{#37}│ {#91}Hardware Information"
    },
    {
      "type": "cpu",
      "key": "{#separator}{#37}│  {#keys}{#32}󰻠 CPU"
    },
    {
      "type": "gpu",
      "key": "{#separator}{#37}│  {#keys}{#32}󰢮 GPU"
    },
    {
      "type": "memory",
      "key": "{#separator}{#37}│  {#keys}{#32}󰍛 Memory"
    },
    {
      "type": "disk",
      "key": "{#separator}{#37}│  {#keys}{#32}󰋊 Disk (/)",
      "folders": "/"
    },
    {
      "type": "custom",
      "format": "{#37}│"
    },
    // Colors
    {
      "type": "colors",
      "key": "{#separator}{#37}│",
      "symbol": "circle"
    },    
    // Footer
    {
      "type": "custom",
      "format": "{#37}╰───────────────────────────────╯"
    }
  ]
}